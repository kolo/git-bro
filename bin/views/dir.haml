%table#files
  %colgroup
    %col.icon
    %col.name
    %col.age
    %col.message
  %tr
    %th
    %th name
    %th age
    %th message
  - objs.each do |obj|
    %tr
      %td
        - if obj[:type] == 'file'
          %img{:src => '/images/file.png'}
        - else
          %img{:src => '/images/folder.png'}
      %td
        %a{:href => "#{@url_prefix}/#{obj[:name]}"}
          = obj[:name]
      %td #{obj[:date]}        
      %td #{obj[:message]} (#{obj[:author]})
